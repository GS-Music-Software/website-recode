---
import { Github } from "@lucide/astro";
---

<header class="sticky top-0 z-30 border-b border-border bg-background/85 backdrop-blur">
  <div class="mx-auto flex h-14 max-w-[1300px] items-center justify-between px-4 sm:px-8 lg:px-16">
    <a href="/" class="flex items-center gap-2.5 text-lg font-bold">
      <div class="flex rounded-md">
        <img src="/gs_icon.webp" alt="" class="h-8 w-8 rounded-md" />
      </div>
      <span class="tracking-tight">GS Music</span>
    </a>

    <div class="flex items-center gap-1">
      <a
        href="#"
        class="rounded-md px-3 py-1.5 text-sm font-medium text-subtle transition-colors duration-200 hover:text-foreground"
      >
        Scripts
      </a>
      <a
        href="#"
        class="rounded-md px-3 py-1.5 text-sm font-medium text-subtle transition-colors duration-200 hover:text-foreground"
      >
        Documentation
      </a>
      <a
        href="/privacy"
        class="rounded-md px-3 py-1.5 text-sm font-medium text-subtle transition-colors duration-200 hover:text-foreground"
      >
        Privacy
      </a>
      <a
        href="https://github.com/gavinstrikes"
        target="_blank"
        rel="noopener noreferrer"
        class="flex h-9 w-9 items-center justify-center rounded-md text-subtle transition-colors duration-200 hover:text-foreground"
        aria-label="GitHub"
      >
        <Github class="h-5 w-5" />
      </a>
    </div>
  </div>
</header>
